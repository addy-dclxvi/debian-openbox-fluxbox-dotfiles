general {
        output_format = "none"
        colors = false
        interval = 4
        separator = ""
}

order += "wireless wlan0"
order += "battery 0"
order += "volume master"
order += "cpu_temperature 0"
order += "load"
order += "disk /"
order += "tztime local"

wireless wlan0 {
        format_up = "A %essid\n"
        format_down = "A Disconnected\n"
}

battery 0 {
        last_full_capacity = true
        format = "B%status %percentage\n"
        format_down = "B% No battery"
        integer_battery_capacity = true
        path = "/sys/class/power_supply/BAT%d/uevent"
        status_chr = ""
        status_bat = ""
        status_unk = ""
        status_full = ""
}

volume master {
        format = "C %volume\n"
        format_muted = "C Muted\n"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_temperature 0 {
        format = "D %degrees°C\n"
        path = "/sys/class/thermal/thermal_zone0/temp"
}

load {
        format = "E %5min Load\n"
}

disk "/" {
        format = "F %free Free\n"
}

tztime local {
        format = "G %time\n"
        format_time = "%A %-d %B at %H:%M"
}
